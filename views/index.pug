extends layout

block content
    div.text-center
        form(class="form-signin" method="POST" action="/api/v1/contact")
            #error
                if error
                    p.text-danger Zip code is not found!
            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) Please input zip code below

            //-input zip code
            label( for="input" class="sr-only") Zip Code
            input(type="number" name="zipCode" id="input"  placeholder="Zip code" required autofocus)
            
            //-signIn button
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(type="submit") Search
